# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_AUTO_OFFSET_RESET=earliest
KAFKA_ENABLE_AUTO_COMMIT=false

# Kafka Topics
KAFKA_EMAIL_TOPIC=notifications-email
KAFKA_EMAIL_RETRY_TOPIC=notifications-email-retry
KAFKA_SMS_TOPIC=notifications-sms
KAFKA_PUSH_TOPIC=notifications-push

# Consumer Configuration
KAFKA_CONSUMER_GROUP_ID=email-notification-workers

# SendGrid Configuration
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=Your App Name
SENDGRID_MOCK_MODE=true

# Logging
LOG_LEVEL=INFO
LOG_KAFKA_LEVEL=WARN
